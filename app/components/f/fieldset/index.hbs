<fieldset>
  {{#if @legend}}
    <legend class="text-sm font-semibold leading-6 text-gray-900">{{@legend}}</legend>
  {{/if}}
  <div class="mt-2 space-y-6 lg:flex items-center place-content-between">
    {{yield}}
  </div>
  {{#if @errors}}
    <div>
      <ErrorMessage @errors={{@errors}} />
    </div>
  {{/if}}
</fieldset>